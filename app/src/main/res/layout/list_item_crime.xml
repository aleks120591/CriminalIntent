<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/struct_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"/>

            <CheckBox
                android:id="@+id/crime_list_item_solvedCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/crime_list_item_titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/crime_list_item_solvedCheckBox"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/crime_title"
                android:textStyle="bold"
                android:layout_toRightOf="@id/struct_image"/>

            <TextView
                android:id="@+id/crime_list_item_dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/crime_list_item_titleTextView"
                android:layout_toLeftOf="@id/crime_list_item_solvedCheckBox"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="@string/crime_date"
                android:layout_toRightOf="@id/struct_image"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>